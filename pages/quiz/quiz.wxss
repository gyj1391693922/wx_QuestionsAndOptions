/* quiz.wxss */
.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
  }
  
  .question {
    font-size: 20px;
    margin-bottom: 20px;
  }
  
  .options {
    display: flex;
    flex-direction: column;
  }
  
  .options view {
    width: 200px;
    height: 40px;
    line-height: 40px;
    text-align: center;
    background-color: #f0f0f0;
    margin-bottom: 10px;
    cursor: pointer;
  }